@using static System.Collections.Specialized.BitVector32
@model List<Student>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="contianer">
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-@TempData["AlertColor"]">
            <strong>@TempData["AlertMessage"]</strong>
    </div>
    }
    <div class="row">
        <div class="col-6  py-2">
            <h2>Student List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Add" class="btn btn-primary">Add New Student</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Student Age</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Age</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<partial name="_validationScriptsPartial"/>

@section scripts {
    <script>
        $(function () {
            var successMessage = "You Perform an action"
            if (successMessage != "")
                alert.success(successMessage);
        });
    </script>
}

